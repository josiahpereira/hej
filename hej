package adittion;

public class junit {
	public int add(int a, int b)
	{
		return(a+b);
		
	}
	public String concacat(String a, String b)
	{
		return(a+b);
	}

}


package adittion;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class junitTest {

	@Test
	void test() {
		junit a = new junit();
		int r = a.add(10,20);
		assertEquals(30,r);
	}

}


